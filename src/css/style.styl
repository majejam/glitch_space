*
    margin 0
    padding 0
    

html,body
    position relative
    top 0
    left 0
    width 100%
    height 100vh
    overflow hidden
    font-family 'Montserrat', sans-serif
    user-select none
    color white

.cursor-hold
    position absolute 
    top 100%
    left 0
    color white 
    transition 0.5s ease opacity
.sml-bar
    width 100%
    height: 2px
    background white
    transform scaleX(0)
    transition 0.1s linear all
    transform-origin left  
.container-intro
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background black
    opacity 0
    z-index -1
    will-change opacity 

.container-home
    position absolute
    top 0
    left 0
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center
    flex-flow column nowrap
    z-index 2
    transition 0.2s ease all
.cursor
    position fixed
    top 0 
    left 0
    z-index: 2000000
    width: 40px 
    height: 40px
    border-radius: 20px
    border 1px solid white
    transform translate(-50%,-50%)
    transition 0.2s ease transform
$keyframe-name = appear
@keyframes {$keyframe-name}
  for i in 0..10
    {10% * i}
      opacity (i/10)

.introduction
    display flex
    justify-content center
    align-items center
    flex-flow column nowrap
    z-index 3
    transition 1s ease opacity

.title
    font-size 2.2em 
    font-weight 700

.subtitle
    font-size 1em 
    font-weight 500

.subtitle-end
    font-size 1em 
    font-weight 500
.hide
    position fixed
    opacity 0
    z-index -1
.show
    position relative
    opacity 1
    z-index 2

.projects
    position absolute
    top 50px 
    left 50px 
    font-weight 500
    cursor pointer
    transition 1s ease all
    display none

.link-container
    position absolute
    bottom 50px
    left 50%
    transform translateX(-50%)
    width 60%
    height auto
    display flex
    justify-content space-around
    align-items center
    flex-flow row nowrap
    z-index 2
    overflow hidden

.container-projects
    display none
    justify-content center
    align-items center
    flex-flow column nowrap
    z-index 3
    transition 1s ease opacity

.link-p
    text-decoration none
    font-size 1.8em 
    font-weight 500
    color white
    text-align center
    margin-top 10px

.link-p-view
    margin-bottom 10px

.link-p:visited
    color white

.link
    text-decoration none
    font-size 1em 
    font-weight 500
    color white

.link:visited
    color white

.cvdiv
    position absolute
    top 50px 
    right 50px 
    font-weight 300
    z-index 2
.projects-container
    background black
    position absolute
    width: 80%;
    height auto
    top 0
    left 0
    padding: 0 10%
    display none
    overflow: hidden;
    transition 0.1s ease transform

.projects-inside-ctn
    width 100% 
    height auto
    padding 100px 0
    animation appear 1s ease 0s 1 backwards normal
.title__container__left
    overflow hidden
    position absolute
    top 0 
    left 0
    height 90px
    width 0%
    color: black;
    -webkit-text-stroke-color: white;
    -webkit-text-stroke-width: 1px;
    transition: 0.5s ease-out all

.project:hover .title__container__left
    width 100%
.image__container
    position absolute
    top -50px 
    right -300px
    width 400px
    height 400px
    z-index 1
.image__cover
    position absolute 
    background black
    top 0
    right 0 
    width 100%
    height 100%
    transition: 0.5s ease-out all 
.img__container__overflow
    width 100%
    height 100%
    overflow hidden
    transition: 0.5s ease-out all 
.overlay__image
    position: absolute
    top -5px    
    left -5px
    right -5px
    bottom -5px 
    background: rgba(0,0,0,0.5)
.img__size
    width 100%
    object-fit: cover;
.title__container__right
    overflow hidden
    position absolute
    top 0 
    right 0
    height 90px
    width 100%
.project:hover .image__cover
    width 0%
.inside_project_link
    display inline-block
    color white
.project
    width 60%
    color white
    display flex 
    justify-content center 
    flex-flow column nowrap
    align-items flex-start
    margin-top 100px
    transform matrix(1, 0, 0, 1, 0, 0);
    transition 0.1s ease-in-out all
    cursor pointer
    text-decoration none
    animation 0.5s ease-in-out 0s 1 forwards normal
    will-change transform 
.big__title__container
    width 500px
    height 90px
    position relative
.date
    font-weight 500 
    font-size 1.1em
    margin-bottom 8px
.project-title
    position absolute 
    top 0
    left 0
    z-index 100
    font-weight 700
    margin-top -10px
    margin-left 0px
    font-size 5em
    z-index 10
.project-paragraph
    font-size 1.1em
    font-weight 300 
    z-index 1
.scroll__bar
    position fixed 
    top 0
    right 5px
    height 80px
    width 5px 
    background white 
    border-radius 5px
    z-index 1000
    display none
    transition: 0.1s linear all;
.close_button
    position fixed 
    top 40px 
    right 40px 
    width 50px
    height 50px 
    border-radius 100%
    z-index 1000
    border 1px white solid
    cursor pointer
    background: url('../images/cross.png')
    background-position center 
    background-size cover
    background-repeat no-repeat
    transition 0.3s linear all;
    display none
.link-text
    display inline-block
    padding 10px 0
    margin-right 20px
    margin-top 10px
    color white
.close_button:hover
    transform: rotate(180deg)

.close_button:hover  .cursor
    transform: scale(1.5)
@keyframes appear {
    0%{
    transform: translateY(100%)    
    }
    100%{
    transform: translateY(0%)    
    }
}

@keyframes appear-text {
    0%{
    transform matrix(1, 0.2, 0, 0.7, 0, 0);   
    }
    100%{
    transform matrix(1, 0, 0, 1, 0, 0);   
    }
}
  @media (max-width: 500px)
    .link-container
        width 90%
    body
        overflow-x hidden
        overflow-y auto
    .projects
        top 20px 
        left 20px 
    .scroll__bar
        display none !important
    .project
        width 100%
        margin-top 50px

    .project-title
        font-size 2.6em 
        margin-top 20px


 @media (max-width: 800px)
    .link
        font-size 0.7em
        